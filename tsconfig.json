{
	"extends": [
		"@sapphire/ts-config",
		"@sapphire/ts-config/extra-strict",
		"@sapphire/ts-config/decorators"
	],
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noUnusedParameters": false,
		"noUnusedLocals": false,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"noImplicitReturns": false,
		"strictNullChecks": false,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@khronos-index": ["./src/openapi/khronos/index.ts"],
			"@kh-openapi": ["./src/openapi/khronos/index.ts"],
			"@pluto-config": ["./src/lib/pluto-config.ts"]
		},
		"outDir": "./dist",
		"rootDir": "./src",
		"noFallthroughCasesInSwitch": false,
		"lib": ["ES2021", "DOM"],
		"tsBuildInfoFile": "./dist/.tsbuildinfo"
	},
	"include": ["src"],
	"exclude": [
		"ecosystem.config.js",
		"node_modules",
		"dist",
		"src/utils/bot_res/img-pup.ts"
	]
}
